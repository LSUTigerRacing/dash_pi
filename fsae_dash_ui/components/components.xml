<component>
    <previews>
        <preview style_pad_all="4"/>
   </previews>

    <api>
        <prop name="title" type="string" default="TEMP" help="The label for the gauge (e.g., COOLANT, OIL)"/>
        <prop name="min_value" type="int" default="0" help="Minimum temperature value"/>
        <prop name="max_value" type="int" default="120" help="Maximum temperature value"/>
        <prop name="current_value" type="int" default="0" help="Current temperature reading"/>
        <prop name="unit" type="string" default="째C" help="Temperature unit (째C or 째F)"/>
    </api>

   <styles>
         <style name="container_style"
            width="80"
            height="300"
            bg_color="#2C3E50"
            bg_opa="100%"
            border_width="2"
            border_color="#34495E"
            radius="10"
            pad_all="10"/>

        <style name="track_style"
            width="30"
            height="260"
            bg_color="#1A252F"
            bg_opa="100%"
            radius="15"/>

        <style name="bar_main_style"
            bg_opa="0%"
            border_width="0"/>

        <style name="bar_indicator_style"
            bg_color="#00FF00"
            bg_opa="100%"
            radius="13"
            bg_grad_color="#FFD700"
            bg_grad_dir="ver"/>

        <!-- Hot Temperature Warning -->
        <style name="bar_indicator_hot"
            bg_color="#FF0000"
            bg_grad_color="#FF6600"/>

        <!-- Warm Temperature Warning -->
        <style name="bar_indicator_warm"
            text_color="#ECF0F1"
            text_font="geist_bold_12"/>

        <!-- Text Styling -->
        <style name="title_style" 
            text_color="#ECF0F1" 
            text_font="geist_bold_12"/>
        
        <style name="value_style" 
            text_color="#FFFFFF" 
            text_font="geist_bold_16"/>

        <!-- Tick Styling -->
        <style name="tick_style"
            width="8"
            height="2"
            bg_color="#ECF0F1"
            bg_opa="100%"/>
   </styles>

   <view extends="lv_obj">
        <remove_style_all />
        <style name="container_style"/>
        
        <!-- Background track (the empty thermometer channel) -->
        <lv_obj align="center">
            <remove_style_all />
            <style name="track_style"/>
            
            <!-- The moving bar that goes up and down -->
            <lv_bar align="center" width="26" height="256">
                <style name="bar_main_style"/>
                <style name="bar_indicator_style"/>
            </lv_bar>
        </lv_obj>
        
        <!-- Tick marks on the left side -->
        <lv_obj align="left_mid" x="5" width="10" height="260">
            <!-- Top tick (max value) -->
            <lv_obj align="top_left" y="0">
                <remove_style_all />
                <style name="tick_style"/>
            </lv_obj>
            
            <!-- High tick (75%) -->
            <lv_obj align="top_left" y="65">
                <remove_style_all />
                <style name="tick_style"/>
            </lv_obj>
            
            <!-- Middle tick (50%) -->
            <lv_obj align="top_left" y="130">
                <remove_style_all />
                <style name="tick_style"/>
            </lv_obj>
            
            <!-- Low tick (25%) -->
            <lv_obj align="top_left" y="195">
                <remove_style_all />
                <style name="tick_style"/>
            </lv_obj>
            
            <!-- Bottom tick (min value) -->
            <lv_obj align="bottom_left" y="0">
                <remove_style_all />
                <style name="tick_style"/>
            </lv_obj>
        </lv_obj>
        
        <!-- Title label at top -->
        <lv_label text="$title" align="top_mid" y="5">
            <style name="title_style"/>
        </lv_label>
        
        <!-- Current value display at bottom -->
        <lv_label text="0째C" align="bottom_mid" y="-5">
            <style name="value_style"/>
        </lv_label>
    </view>
</component>